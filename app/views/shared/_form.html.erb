  <%= form_for person, url: path, html: {class: "form-horizontal"} do |f| %>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :name, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: 'Full Name' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :email, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: 'Email' %>
      </div>
    </div>

   <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :phone_number, class: "control-label"%>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.text_field :phone_number, class: "form-control", autofocus: true, placeholder: 'Phone number' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :address, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.text_field :address, class: "form-control", autofocus: true, placeholder: 'Street Address' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :city, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">  
        <%= f.text_field :city, class: "form-control", autofocus: true, placeholder: 'City' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :state, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">  
        <%= f.text_field :state, class: "form-control", autofocus: true, placeholder: 'State' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :zip_code, class: "control-label" %>
      </div>
      <div class="col-lg-4 text-right">  
        <%= f.text_field :zip_code, class: "form-control", autofocus: true, placeholder: 'Zip Code' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :password, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.password_field :password, class: "form-control", autofocus: true, placeholder: 'Password' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-2 text-right">
        <%= f.label :password_confirmation, class: "control-label" %>
      </div>
      <div class="col-lg-8 text-right">
        <%= f.password_field :password_confirmation, class: "form-control", autofocus: true, placeholder: 'Confirm Password' %>
      </div>
    </div>

    <!-- only display if not logged in -->
    <% if !@current_user %>
      <div>
        Patient
        <%= f.radio_button(:type, "Patient") %>
        Doctor
        <%= f.radio_button(:type, "Doctor") %>
      
      </div>
    <% end %>

    <div class="form-group">
      <div class="col-lg-10 center">
        <%= f.submit button_name, class: "btn btn-success"%>
      <%if @current_user %>
        <%=link_to "Cancel", user_path(@current_user), class: "btn btn-default" %>
      <% end %>
      </div>
    </div>

  <% end %>
</div>