<h2><strong>Step 3:</strong> Please Confirm Your Appointment</h2>

<%= form_for @patient_appointment, url: patient_appointments_path(doctor_id: @current_doctor, user_id: @current_user), html: {class: "form-horizontal"} do |f| %>
  
  <div class="form-group">
    <div class="col-lg-4 text-right">
      <%= f.label :start_time, class: "control-label" %>
    </div>
    
    <div class="col-lg-4">
      <%= f.text_field :start_time, class: "form-control", autofocus: true, placeholder: 'Start time' %>
    </div>
  
  </div>

  <div class="form-group">
    <div class="col-lg-4 text-right">
      <%= f.label :date, class: "control-label" %>
    </div>
    <div class="col-lg-4">
      <%= f.text_field :date, class: "form-control", autofocus: true, placeholder: 'Date'%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-12 center">
      <%= link_to "Back to Appointments",:back,class: "btn btn-default" %>
      <%= f.submit "Confirm Booking", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
