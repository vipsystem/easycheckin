<!DOCTYPE html>
<html>
<head>
  <title>EasyCheckin</title>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/fullcalendar.min.js'></script>
  <link rel="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/1.6.4/fullcalendar.css">
  <%= javascript_tag do %>
$(document).ready(function() {
$('#calendar').fullCalendar()
});
<% end %>
</head>
<body>
  <%= render 'layouts/header' %>
  <div class="container">
    <% if @current_user %>
      <div class="col-md-2">
        <%= render 'layouts/side_navigation' %>
      </div>
      <div class="col-md-10">
        <%= yield %>
      </div>
    <% else %>
      <%= yield %>
    <% end %>
  </div>

</body>
</html>